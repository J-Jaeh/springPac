{{>layout/header}}

<h1>미니 블로그</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary" id="save-post">글 등록</a>


                <a href="/" class="btn btn-info active" role="button" id="logout" onclick=logout() >Logout</a>



                <div>
                    <a id="sign-text" href="/api/user/signup">
                        회원가입
                    </a>
                    <a id="login-text" href="/api/user/login">
                        로그인
                    </a>
                </div>




        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}} DTO
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/see/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}